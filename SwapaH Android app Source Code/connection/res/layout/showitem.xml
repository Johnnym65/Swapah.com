<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
android:orientation="vertical" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent">

<ScrollView android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:background="#FFFFFF"> 
            
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
android:orientation="vertical" 
android:layout_width="fill_parent" 
android:layout_height="fill_parent">
    <TextView android:layout_width="fill_parent" android:id="@+id/top" android:layout_height="wrap_content" android:text="Hello World, HTTPImage load test"></TextView>
    <TextView android:layout_width="wrap_content" android:id="@+id/photo" android:layout_height="wrap_content" android:text="Photo:"></TextView>
    <ImageView android:src="@drawable/noimage" android:id="@+id/imview" android:layout_gravity="center" android:layout_height="wrap_content" android:background="@drawable/border" android:layout_width="wrap_content"></ImageView>
    
    
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="CHANGE PHOTO" android:layout_gravity="center" android:id="@+id/add"></Button>
    
    <LinearLayout 
    android:id="@+id/LinearLayout02" 
    android:layout_height="wrap_content" 
    android:layout_width="fill_parent" 
    android:layout_alignParentBottom="true">
    	<Button android:layout_width="wrap_content" android:layout_weight="1" android:layout_height="wrap_content" android:text="previous"  android:id="@+id/previous"></Button>
		<Button android:layout_width="wrap_content"  android:layout_weight="1" android:layout_height="wrap_content" android:text="next" android:id="@+id/next"></Button>
	</LinearLayout>
	
<FrameLayout android:id="@+id/frameLayout1" android:layout_width="match_parent" android:layout_height="wrap_content"></FrameLayout>
</LinearLayout>
</ScrollView>
</LinearLayout>